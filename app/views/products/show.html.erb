<div class="container">
  <h1 class="text-center">Product</h1>
  <table class="table table-hover table-border text-center">
    <tbody>
      <tr>
        <td>Product Name</td>
        <td><%= @product.product_name %></td>
      </tr>
      <tr>
        <td>Product Price</td>
        <td><%= @product.price %></td>
      </tr>
      <tr>
        <td>Product Description</td>
        <td><%= @product.description %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "All Products", products_path, class:"btn btn-primary"%>
</div>
