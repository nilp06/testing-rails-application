<div class="container">
  <h1 class="text-center">Products</h1>
  <table class="table table-hover table-border text-center">
    <thead>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td>
            <%= link_to "Show", product_path(product), class: 'btn btn-primary'%>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary"%>
            <%= link_to "Delete", product_path(product), data: { turbo_method: "delete" }, class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
